<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.developers.devworms.daimler_android.MainActivity"
    android:weightSum="1"
    android:background="@drawable/fondo">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Para Ingresar a la aplicación Ingresa tu E-mail y Contraseña"
        android:id="@+id/textView11"
        android:layout_below="@+id/mailText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tipoSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/mailGetText"
        android:hint="E-mail" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passGetText"
        android:hint="Contraseña" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/ingresarBtn"
        android:textColor="#ffffff"
        android:background="#000000" />

    <Button
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:text="Ingresa tu código de registro"
        android:id="@+id/codRegBtn"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_marginTop="20dp"
        android:onClick="pantallaCodigo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Si aún no te has registrado,"
        android:id="@+id/textView12"
        android:layout_below="@+id/mailText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tipoSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="registrate ahora"
        android:id="@+id/textView13"
        android:layout_below="@+id/mailText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tipoSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:textColor="#5676e1"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:onClick="llamarRegistro" />

</LinearLayout>
